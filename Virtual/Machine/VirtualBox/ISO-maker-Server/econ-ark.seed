# 20200722 - about 15:00, finally a version that works

# Regional setting
d-i debian-installer/splash                                 boolean     false

### Automatic Installation
d-i auto-install/enable boolean true
d-i debconf/priority select critical  # only insist that "critical" questions be answered

### Localization
d-i debian-installer/locale string en_US.UTF-8
d-i localechooser/supported-locales multiselect en_US.UTF-8

# Keyboard
d-i console-setup/ask_detect boolean false
d-i keyboard-configuration/xkb-keymap select us

### Network config
d-i netcfg/choose_interface select auto
d-i netcfg/get_hostname                                     string      {{hostname}}
d-i hw-detect/load_firmware boolean true

# mirror settings for downloads
d-i mirror/country string manual
d-i mirror/http/hostname string archive.ubuntu.com
d-i mirror/http/directory string /ubuntu
d-i mirror/http/proxy string

# clock and timezone settings
d-i time/zone                                               string      {{timezone}}
d-i clock-setup/utc                                         boolean     false
d-i clock-setup/ntp                                         boolean     true

# user account setup
# DO NOT uncomment root-password lines: That disables sudo for main user
#d-i passwd/root-password                                    password    {{pwhash}}
#d-i passwd/root-password-again                              password    {{pwhash}}
#d-i passwd/root-login                                       boolean     true

d-i passwd/make-user                                        boolean     true
d-i passwd/user-fullname                                    string      {{username}}
d-i passwd/username                                         string      {{username}}
d-i passwd/user-password-crypted                            password    {{pwhash}}
d-i passwd/user-uid                                         string
d-i user-setup/allow-password-weak                          boolean     false
d-i passwd/user-default-groups                              string      adm cdrom dialout lpadmin plugdev sambashare # will add vboxsf later
d-i user-setup/encrypt-home boolean false

# configure apt
d-i apt-setup/restricted                                    boolean     true
d-i apt-setup/universe                                      boolean     true
d-i apt-setup/backports                                     boolean     true
d-i apt-setup/services-select                               multiselect security
d-i apt-setup/security_host                                 string      security.ubuntu.com
d-i apt-setup/security_path                                 string      /ubuntu

# Choose desktop 
tasksel tasksel/first                                       multiselect standard, xubuntu-desktop 
tasksel tasksel/desktop                                     multiselect xfce # Start xfce

# Partitioning is a nightmare if you want to make an image that will
# boot on either UEFI or MBR/BIOS machines
# and VirtualBox is MBR/BIOS only (natively)
#     (Nobody in the universe seems to understand how to use the EFI (for special OS only) option)
# while almost every machine made in the last 15 years is UEFI/GPT
# Conflicting info about whether it is possible to have both MBR and GPT at the same time
# but unable to find any preseed files that accomplish it

# Good resources were:
# 0. Debian instructions ("Buster 10.4 was released on May 9, 2020")
# 0. fitzcarraldoblog's 2017 (tried but could not get UEFI-GPT option 3 working)

# ### EFI
d-i partman-efi/non_efi_system boolean true

partman-auto/expert_recipe string   \  
atomic_fromDebian ::                \  # This started with a recipe in the Debian manual and evolved
1 1 1 free                          \
      $bios_boot{ }                 \
      method{ biosgrub }            \
         .                          \
512 512   512     fat32             \
#        $bootable{ }               \
        $primary{ }                 \
#	method{ efi }		    \
	method{  }		    \
	mountpoint{ /boot/efi }     \
	format{ } 		    \
	. 		            \
512 512   512     fat32             \
#       $bootable{ }                \
#       $primary{ }                 \
#	method{ efi }		    \
	method{ keep }		    \
	mountpoint{ /boot/hfs }     \
	format{ } 		    \
	. 		            \
10000 10000 1000000 ext4	    \
#        $lvmok{ }		    \
	$primary{ }	            \
	$bootable{ }	            \
	method{ format }            \  
	format{ }	            \ 
	use_filesystem{ }           \  
	filesystem{ ext4 }          \	   
	mountpoint{ / } .           \	   
64 512 100% linux-swap	            \	   
	method{ swap }	            \    
	format{ } .               

# See Old/econ-ark.seed-failures for many failed examples

# ### Grub
d-i grub-installer/only_debian boolean true
d-i grub-installer/with_other_os boolean true

# Policy for applying updates. May be "none" (no automatic updates),
# "unattended-upgrades" (install security updates automatically), or
# "landscape" (manage system with Landscape).
d-i pkgsel/upgrade                                          select      safe-upgrade
d-i pkgsel/update-policy                                    select      unattended-upgrades
d-i pkgsel/updatedb                                         boolean     true

# Other useful stuff
d-i pkgsel/include string openssh-server build-essential

# This will just finish and reboot
d-i finish-install/keep-consoles                            boolean     false
d-i cdrom-detect/eject                                      boolean     true
d-i finish-install/reboot_in_progress note
# d-i debian-installer/exit/halt                              boolean     false
# d-i debian-installer/exit/poweroff                          boolean     false
